<div class="container">
  <h1>Projects</h1>
  <% if user_signed_in? %>
    <%= link_to 'New project', new_project_path, class: 'btn btn-outline-primary pull-xs-right' %>
  <% end %>
  <section id="projects">
    <table class="table table-bordered table-striped">
      <thead>
      <tr>
        <td>Name</td>
        <td>Summary</td>
        <td>Start date</td>
        <td>End date</td>
      </tr>
      </thead>
      <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.name, project_path(project) %></td>
          <td><%= project.summary %></td>
          <td><%= project.start_date.to_date.strftime("%d %B %Y") %></td>
          <td><%= project.end_date.to_date.strftime("%d %B %Y") %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
</div>
