<div class="container">
  <h1>Tasks</h1>
  <% if user_signed_in? %>
  <%= link_to 'New task', new_task_path, class: 'btn btn-outline-primary pull-xs-right' %>
    <% end %>
  <section id="projects">
    <table class="table table-bordered table-striped">
      <thead>
      <tr>
        <td>Title</td>
        <td>Description</td>
        <td>Status</td>
        <td>Assigned to</td>
      </tr>
      </thead>
      <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.title, task_path(task) %></td>
          <td><%= task.description %></td>
          <td><%= task.status %></td>
          <td>
            <% if task.user.present? %>
              <%= task.user.first_name %>
              <%= task.user.last_name %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
</div>
